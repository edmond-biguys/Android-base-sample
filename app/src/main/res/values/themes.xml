<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Xmcc" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Xmcc.Fullscreen" parent="Theme.Xmcc">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.Xmcc.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.AndroidBaseSample.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.Xmcc.NoActionBar" parent="Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <item name="colorPrimary">@color/light_blue_600</item>
        <item name="colorPrimaryDark">@color/light_blue_900</item>
        <item name="colorAccent">@color/teal_200</item>

    </style>

    <style name="Theme.Xmcc.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Xmcc.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>